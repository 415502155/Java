@charset "utf-8";

/*基本*/
body{
	font-family: "Helvetica Neue",Helvetica,"PingFang SC","Hiragino Sans GB","Microsoft YaHei","微软雅黑",Arial,sans-serif;
	background: -webkit-linear-gradient(#3BB5FF, #fff);
	/* Safari 5.1 - 6.0 */
	background: -o-linear-gradient(#3BB5FF, #fff);
	/* Opera 11.1 - 12.0 */
	background: -moz-linear-gradient(#3BB5FF, #fff);
	/* Firefox 3.6 - 15 */
	background: linear-gradient(#3BB5FF, #fff);
	/* 标准的语法 */
	max-width: 640px;
	background-size: 100%;
}
a,a:link {
	color:#7167ef;
	text-align:center;
	border-bottom: 1px #7167EF solid; 
	margin: 0 auto;
	margin-bottom:.5rem; 
	display:inline-block;
	margin-left: 3.1rem;
	font-weight: bold;
	text-decoration: none;
	}
a:visited { 
	color:#7167ef;
} 
a:hover { 
	color:#7167ef;
} 
a:active { 
	color:#7167ef;
} 
.shadow {box-shadow: 0 0.05rem 1rem rgba(159, 39, 222, 0.14);}
/*容器*/
.wrap {
	margin: 1rem .4rem .4rem;
	text-align: center;
    background: #FFFFFF;
    border-radius: .4rem;
    overflow: hidden;
    box-shadow: 0 0.05rem 0.24rem rgba(160, 39, 222, 0.16);
    padding-bottom: .5rem;
}
/*紫色背景标题*/
.textTitle {
    border-radius: 20px;
    background: #3BB5FF;
    color: #fff;
    margin: 1rem auto .4rem;
    padding: 5px 1.4rem;
    font-weight: 700;
    text-align: center;
    display: inline-block;
    font-size: .72rem;
}
/*英文标题*/
.englistTitle {
    color: #917adc;
    text-transform: uppercase;
    font-size: 22px;
    padding-bottom: 20px;
    margin: 0 auto;
    font-size: .62rem;
}
/*黑色标题*/
.title {
    margin: .5rem auto;
    padding: 5px 1.4rem;
    font-weight:700;
    text-align:center;
    font-size:.72rem;
}
/*页面布局*/
/*页面布局-----公用提示[橙色]*/
.currencyTip {    
	background: #fc992e;
    color: #FFFFFF;
    padding: .8rem;
    font-size: .64rem;
    line-height: .9rem;
    text-align: left;
}
.information {
	border: 1px dashed #dcdcdc;
	padding: .1rem .6rem .3rem;
	margin: .2rem .5rem;
	border-radius: .5rem;
	text-align: left;
	font-size: .64rem;
}
.module {    
	padding: 1.8rem 0 0;
    margin: 1rem .5rem .5rem;
    background:  url(../../images/down_chevron.png) top center no-repeat;
    position: relative;
    }  
.moduleFisrst {
	position: relative;
	margin: 1rem .5rem .5rem;
}
.moduleFisrst  .module_icon{
  top: -3rem; 
}
.moduleFisrst  .module_icontext{
	position: relative;
	margin-top: 3rem;
}
.module_icon { 
	height: 6rem; 
	width: 100%;
	background: url(../../images/icon_1.png) top center no-repeat; 
	position: absolute; 
	top: 1.6rem; 
	background-size: 4.2rem;
	}
.module_icon1 { 
	background: url(../../images/icon_2.png) top center no-repeat; 
	background-size: 4.2rem;
}
.module_icon2 { 
	background: url(../../images/icon_3.png) top center no-repeat;
	background-size: 4.2rem;
}
.module_icon3 { 
	background: url(../../images/icon_4.png) top center no-repeat; 
	background-size: 4.2rem;
}
.module_icontext {
	font-size:.64rem;
	margin-top: 2.8rem;
	padding: 1.6rem .8rem .5rem;
	border-radius: .4rem;
	text-align: left;
}
.module_icontext p { text-indent: 1.3rem; margin: .2rem .1rem;}
.module_icontext a { text-align: center;}  
/*页面布局-----版权信息*/
footer {
	font-size:.64rem;
	text-align: center;
	color: #6e6e6e;
	margin: 1rem 0 2rem;
	}

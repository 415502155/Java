/* 公共样式 */
.fl {
    float: left;
}
.fr {
    float: right;
}
.clearfix{
    zoom: 1;
}
.clearfix::after{
    content:'';
    display: block;
    clear: both;
}
.split-line{
    height:0.75rem;
    background-color: #eee;
}

.contents{
    margin-top:2.2rem;
}

/* 内容块儿容器 */
.cont-box{
    background-color:#fff;
}

/* 标题 */
.cont-title {
    background-color: #fff;
    height: 2rem;
    line-height: 2rem;
    padding:0 0.45rem;
    border-bottom: 1px solid #f0f0f0;
    font-weight: 900;
}
.statistics-details {
    color: #4263E8;
}
.cont-bar {
    padding: 0.7rem 0.45rem;
}

.attention-info {
    padding: 0.64rem 0 1.12rem 0;
}

.attention-student {
    margin-bottom: 0.3rem;
}

.attention-student h4 {
    display: inline-block;
}
.attention-nums {
    color: #999;
    margin-top: 0.27rem;
    text-align: center;
}
.attention-percent {
    background: #E8E8E8;
    border-radius: 5px;
}
.attention-bar {
    background: linear-gradient(to right, #4FCFF6, #4263E8);
    width: 0;
    height: 0.27rem;
    border-radius: 5px;
}
.data-date {
    text-align: center;
    padding: 0.45rem 0.43rem;
}
.select-date {
    background: none;
    border: none;
    display:inline;
}

/* 信息统计 */
.info-statistics{
    padding:0.56rem 0 0.75rem;
}
.info-box{
    width:24.5%;
    text-align: center;
    line-height: 1.4rem;
    float:left;
}
.info-box a{
	color:#4263E8;
}
.info-box h4{
	line-height: 2rem;
}

/* 考勤统计 */
.attendance-statistics{}
.attendance-statistics.no-data a{
    color:#acacac;
}

.days-attendance{
    padding:1.23rem 0.75rem;
    overflow:hidden
}
.attendence-title{}
.attendance-table{}
.table-box{
    margin-top:1rem;
    height:10rem;
    position: relative;
}
.table-box::before{
    content: '';
    width: 100%;
    height: 0.1rem;
    top: 31.5%;
    left: 0;
    position: absolute;
    background-color: #bbb;
}
.table-percent{
    position: absolute;
    top: 33%;
    right: 0%;
    opacity: 0.5;
}
.table-num{
    text-align: center;
    margin-top:1rem;
}

/* 支付统计 */
.pay-info-title{
    margin-bottom:0.75rem;
}

/* 折线图日期 */
.echarts-date{
	width: 4rem;
    position: absolute;
    top: 8.5rem;
    left: -1rem;
}
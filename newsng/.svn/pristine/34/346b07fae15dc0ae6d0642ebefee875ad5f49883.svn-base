
/* 公共样式 */

.fl {
    float: left;
}

.fr {
    float: right;
}
.clearfix{
    zoom: 1;
}
.clearfix::after{
    content:'';
    display: block;
    clear: both;
}
.split-line{
    height:0.75rem;
    background-color: #eee;
}


/* 内容块儿容器 */
.cont-box{
    background-color:#fff;
}
/* 标题 */
.cont-title {
    background-color: #fff;
    height: 2rem;
    line-height: 2rem;
    padding:0 0.45rem;
    border-bottom: 1px solid #f0f0f0;
    font-size: 0.45rem;
    font-weight: 900;
}
.statistics-details {
    color: #4263E8;

    margin-left: 6.53rem;
}
.cont-bar {
    padding: 0.7rem 0.45rem;
}

.attention-info {
    padding: 0.64rem 0 1.12rem 0;
}

.attention-student {
    margin-bottom: 0.3rem;
    font-size: 0.45rem;
}

.attention-student h3,
.attention-student h4 {
    display: inline-block;
}

.attention-student h3 {
    font-size: 0.5rem;
}



.attention-nums {
    color: #999;
    margin-top: 0.27rem;
    font-size: 0.45rem;
    text-align: center;
}

.attention-percent {
    background: #E8E8E8;
    border-radius: 5px;
}

.attention-bar {
    background: linear-gradient(to right, #4FCFF6, #4263E8);
    width: 60%;
    height: 0.27rem;
    border-radius: 5px;
}

.data-date {
    text-align: center;
    padding: 0.45rem 0.43rem;
}

.select-date {
    background: none;
    border: none;
    margin: 0 3.8rem;
}

/* 信息统计 */
.info-statistics{
    font-size:0.45rem;
    padding:0.56rem 0 0.75rem;
}
.info-box{
    width:33.3%;
    text-align: center;
    line-height: 1.4rem;
    float:left;
}

/* 考勤统计 */
.attendance-statistics{
    font-size:0.64rem;
}
.attendance-statistics.no-data a{
    color:#acacac;
}
.attendance-table{
    height:7.07rem;
}


/* 支付统计 */

.pay-info-title{
    font-size:0.48rem;
    margin-bottom:0.75rem;
}

.tablesorter-blue tbody > tr.cookEdit > td { color: #337ab7; cursor: pointer}
.tablesorter-blue tbody > tr > td.operation i { margin-right: 5px;}

.tablesorter-blue tbody > tr > td span.cookText {
    line-height: 20px;
    display: block;
    padding: 5px 0;
}

.cooTimeHead {
    padding: 10px;
    display: flex;
    background: #f7f7f7;
    border: #e0e0e0 1px solid;
    border-bottom: none;
    background-color: #f5f5f5;
    background-image: -moz-linear-gradient(top,#fafafa,#ededed);
    background-image: -ms-linear-gradient(top,#fafafa,#ededed);
    background-image: -webkit-gradient(linear,0 0,0 100%,from(#fafafa),to(#ededed));
    background-image: -webkit-linear-gradient(top,#fafafa,#ededed);
    background-image: -o-linear-gradient(top,#fafafa,#ededed);
    background-image: linear-gradient(top,#fafafa,#ededed);
}
.cooTimeHead .item { width: 100%; text-align: center }
.cooTimeHead .item:last-child { text-align: right}
.cooTimeHead .item:first-child { text-align: left}
.monthTitle {    display: inline-block;
    line-height: 36px;
    padding: 0 20px;
    color: #4888be;
    font-size: 18px;
    font-weight: bold;}


/*模拟对角线*/
.tablesorter-blue thead .out {
    border-top: 89px #efefef solid;
    width: 0px;
    height: 0px;
    border-left: 143px #f7f7f7 solid;
    position: absolute;
    left: 0;
    top: 0;
}
.tablesorter-blue thead th b {
    font-style: normal;
    display: block;
    position: absolute;
    top: -80px;
    left: -60px;
    width: 35px;
}
.tablesorter-blue thead th em {
    font-style: normal;
    display: block;
    position: absolute;
    top: -50px;
    left: -120px;
}
.cookChangeImg td img { margin-right: 5px; margin-bottom: 5px;}
